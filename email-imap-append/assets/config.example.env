# IMAP account
export IMAP_NAME="work"
export IMAP_HOST="imap.example.email"
export IMAP_PORT="993"
export IMAP_SSL="true"
export IMAP_USERNAME="user@example.email"
export IMAP_PASSWORD="replace-with-imap-password"
export IMAP_CONNECT_TIMEOUT="20"

# Base mailbox fallback (optional)
export IMAP_MAILBOX="INBOX"

# Draft append defaults (optional)
export IMAP_APPEND_MAILBOX="Drafts"
export IMAP_APPEND_FLAGS="\\Draft"
export IMAP_APPEND_FROM="user@example.email"
# export IMAP_APPEND_TO="reviewer1@example.email,reviewer2@example.email"
# export IMAP_APPEND_CC="cc@example.email"
# export IMAP_APPEND_BCC="audit@example.email"
export IMAP_APPEND_SUBJECT="[draft] email-imap-append"
export IMAP_APPEND_BODY="Draft body placeholder."
export IMAP_APPEND_CONTENT_TYPE="plain" # plain|html
export IMAP_APPEND_MAX_ATTACHMENT_BYTES="26214400" # 25 MiB
