# Option B: IMAP_ACCOUNT_IDS + prefixed variables
export IMAP_ACCOUNT_IDS="work,personal"

export IMAP_WORK_HOST="imap.gmail.com"
export IMAP_WORK_PORT="993"
export IMAP_WORK_USERNAME="work@example.com"
export IMAP_WORK_PASSWORD="replace-with-app-password"
export IMAP_WORK_MAILBOX="INBOX"
export IMAP_WORK_SSL="true"

export IMAP_PERSONAL_HOST="imap.qq.com"
export IMAP_PERSONAL_PORT="993"
export IMAP_PERSONAL_USERNAME="personal@example.com"
export IMAP_PERSONAL_PASSWORD="replace-with-app-password"
export IMAP_PERSONAL_MAILBOX="INBOX"
export IMAP_PERSONAL_SSL="true"

# Runtime defaults (optional)
# 0 means always-on listener; set 1 for one-cycle test runs.
export IMAP_CYCLES="0"
export IMAP_IDLE_MODE="poll" # poll|idle
export IMAP_IDLE_SECONDS="120"
export IMAP_POLL_SECONDS="300"
export IMAP_MAX_MESSAGES="10"
export IMAP_MARK_SEEN="false"
export IMAP_SNIPPET_CHARS="240"
export IMAP_CONNECT_TIMEOUT="20"
export IMAP_RETRY_SECONDS="15"

# OpenClaw webhook forwarding
# Auto-enable behavior: forwarding is enabled when OPENCLAW_WEBHOOKS_TOKEN is set.
export OPENCLAW_WEBHOOKS_ENABLED="true"
export OPENCLAW_WEBHOOKS_TOKEN="replace-with-openclaw-hook-token"
export OPENCLAW_WEBHOOKS_BASE_URL="http://127.0.0.1:18789"
export OPENCLAW_WEBHOOKS_MODE="agent" # agent|wake

# Optional endpoint controls
# export OPENCLAW_WEBHOOKS_ENDPOINT="http://127.0.0.1:18789/hooks/agent"
export OPENCLAW_WEBHOOKS_PATH="/hooks"
export OPENCLAW_WEBHOOKS_WAKE_MODE="now" # now|next-heartbeat
export OPENCLAW_WEBHOOKS_DELIVER="true"
export OPENCLAW_WEBHOOKS_TIMEOUT="15"

# Agent mode options
export OPENCLAW_WEBHOOKS_NAME="Email relay"
# export OPENCLAW_WEBHOOKS_AGENT_ID="agent-id"
export OPENCLAW_WEBHOOKS_CHANNEL="last"
