# SMTP connection
export SMTP_HOST="smtp.example.email"
export SMTP_PORT="465"
export SMTP_SSL="true"
export SMTP_STARTTLS="false"
export SMTP_USERNAME="sender@example.email"
export SMTP_PASSWORD="replace-with-smtp-password"
export SMTP_FROM="sender@example.email"
export SMTP_CONNECT_TIMEOUT="20"

# Default message values (optional)
export SMTP_SUBJECT="[smtp-test] email-smtp-send"
export SMTP_BODY="SMTP test message from email-smtp-send."
export SMTP_CONTENT_TYPE="plain" # plain|html
export SMTP_MAX_ATTACHMENT_BYTES="26214400" # 25 MiB

# Sent sync via IMAP APPEND (optional)
export SMTP_SYNC_SENT="false" # true|false
export SMTP_SYNC_SENT_REQUIRED="false" # true|false
export SMTP_SENT_IMAP_HOST="imap.example.email"
export SMTP_SENT_IMAP_PORT="993"
export SMTP_SENT_IMAP_SSL="true"
export SMTP_SENT_IMAP_USERNAME="sender@example.email"
export SMTP_SENT_IMAP_PASSWORD="replace-with-imap-password"
export SMTP_SENT_IMAP_MAILBOX="Sent Items"
export SMTP_SENT_IMAP_FLAGS="\\Seen"
export SMTP_SENT_IMAP_CONNECT_TIMEOUT="20"

